<section class="bg-white antialiased">
	<div class="max-w-screen-xl px-4 py-8 mx-auto lg:px-6 sm:py-16 lg:py-24">
		<div class="max-w-2xl mx-auto text-center">
			<h1
				class="text-3xl font-extrabold leading-tight tracking-tight text-gray-900 sm:text-4xl"
			>
				<span
					class="font-[RetroSignature] text-7xl md:text-9xl font-normal -mb-4 sm:mb-0"
					>Our</span
				><%= page.title %>
			</h1>
			<div class="mt-4 text-base font-normal text-gray-500 sm:text-xl">
				<%- page.content %>
			</div>
		</div>

		<div class="mt-12 space-y-16 sm:mt-16">
			<% site.pages.filter(page => page.layout ===
			'service').forEach(function(service, index) { %>
			<div class="service mt-8 sm:mt-12 md:mt-16 lg:mt-24">
				<div
					class="flex flex-col lg:items-center lg:flex-row gap-y-8 sm:gap-y-12 lg:gap-x-16 xl:gap-x-24"
				>
					<div class="lg:order-<%= index % 2 === 0 ? 2 : 1 %>">
						<img
							class="object-cover w-full shadow-lg"
							src="<%= service.image %>"
							alt="<%= service.title %>"
							loading="lazy"
						/>
					</div>

					<div
						class="w-full space-y-6 lg:max-w-lg shrink-0 xl:max-w-2xl lg:order-<%= index % 2 === 0 ? 1 : 2 %>"
					>
						<div class="space-y-3">
							<h3
								class="text-3xl font-bold leading-tight text-gray-900 sm:text-4xl"
							>
								<%= service.title %>
							</h3>

							<p class="text-base font-normal text-gray-500 sm:text-lg">
								<%= service.excerpt %>
							</p>
						</div>

						<a
							href="<%= service.url %>"
							title=""
							class="text-white bg-primary-900 justify-center hover:bg-primary-700 inline-flex items-center focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium text-sm px-5 py-2.5 text-center"
							role="button"
						>
							<%= service.title %>
							<svg
								aria-hidden="true"
								class="w-5 h-5 ml-2 -mr-1"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 20 20"
								fill="currentColor"
							>
								<path
									fill-rule="evenodd"
									d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
									clip-rule="evenodd"
								/>
							</svg>
						</a>
					</div>
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</section>
