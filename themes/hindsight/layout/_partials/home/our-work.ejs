<section>
	<div class="text-center">
		<h2
			class="mb-4 lg:mb-8 text-4xl tracking-tight font-extrabold text-primary-900 lg:text-5xl"
		>
			Our Work
		</h2>
	</div>

	<div class="swiper work">
		<div class="swiper-wrapper">
			<% getWorkPosts().forEach(function(post, index) { %> <% if (post &&
			post.carouselImage && post.__permalink) { %>
			
				<a href="<%= url_for(post.path) %>">
					<img
						src="<%- url_for(post.__permalink + post.carouselImage) %>"
						alt="<%- post.title %>"
						class="w-full h-full object-cover"
					/>
				</a>
			</div>
			<% } %> <% }); %>
		</div>
		<div class="swiper-pagination"></div>
	</div>

	<div class="text-center">
		<a
			href="/portfolio"
			class="inline-flex items-center text-lg font-medium text-primary-500 hover:text-primary-700 mt-4 lg:mt-8"
		>
			View Our Portfolio
			<svg
				class="ml-1 w-6 h-6"
				fill="currentColor"
				viewBox="0 0 20 20"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path
					fill-rule="evenodd"
					d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
					clip-rule="evenodd"
				></path>
			</svg>
		</a>
	</div>
</section>

<script>
	var swiper = new Swiper(".work", {
		slidesPerView: 1.5,
		spaceBetween: 30,
		loop: true,
		speed: 2000,
		autoplay: {
			delay: 3000,
			pauseOnMouseEnter: true,
		},
		breakpoints: {
			320: {
				slidesPerView: 1.1,
			},
			768: {
				slidesPerView: 1.2,
			},
			1024: {
				slidesPerView: 1.4,
			},
			1280: {
				slidesPerView: 1.5,
			},
		},
	});
</script>
