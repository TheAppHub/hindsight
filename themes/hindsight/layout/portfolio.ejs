<section class="bg-white">
	<div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
		<div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
			<h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900">
				Our Work
			</h2>
			<p class="font-light text-gray-500 sm:text-xl">
				Explore our portfolio of creative work and successful projects.
			</p>
		</div>

		<!-- Category Navigation -->
		<div class="flex flex-wrap justify-center gap-2 mb-8">
			<a
				href="<%= url_for('/portfolio/') %>"
				class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-300"
			>
				All
			</a>
			<% site.categories.filter(cat => cat.posts.some(post => post.layout ===
			'work')).forEach(function(category) { %>
			<a
				href="<%= url_for(category.path) %>"
				class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-300"
			>
				<%= category.name %>
			</a>
			<% }); %>
		</div>

		<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
			<% getWorkPosts().forEach(function(post) { %>
			<div
				class="max-w-sm bg-white border border-gray-200 shadow-sm flex flex-col"
			>
				<a href="<%= url_for(post.path) %>">
					<% if (post.image) { %>
					<img
						class="w-full h-48 object-cover"
						src="<%= url_for(post.__permalink + post.image) %>"
						alt="<%= post.title %>"
					/>
					<% } %>
				</a>
				<div class="p-5 flex flex-col flex-grow">
					<% if (post.categories && post.categories.length) { %>
					<div class="flex flex-wrap gap-2 mb-2">
						<% post.categories.each(function(category) { %>
						<a
							href="<%= url_for(category.path) %>"
							class="bg-gray-100 text-gray-800 text-xs font-semibold px-2.5 py-0.5 rounded hover:bg-gray-200"
						>
							<%= category.name %>
						</a>
						<% }); %>
					</div>
					<% } %>
					<a href="<%= url_for(post.path) %>">
						<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
							<%= post.title %>
						</h5>
					</a>
					<% if (post.subtitle) { %>
					<p class="mb-3 font-normal text-gray-700"><%= post.subtitle %></p>
					<% } %>
					<div class="mt-auto">
						<a
							href="<%= url_for(post.path) %>"
							class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-primary-700 hover:bg-primary-800"
						>
							Read more
							<svg
								class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
								aria-hidden="true"
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 14 10"
							>
								<path
									stroke="currentColor"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M1 5h12m0 0L9 1m4 4L9 9"
								/>
							</svg>
						</a>
					</div>
				</div>
			</div>
			<% }); %>
		</div>
	</div>
</section>
