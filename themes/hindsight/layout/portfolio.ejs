<section class="bg-white">
	<div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
		<div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
			<h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900">
				Our Work
			</h2>
			<p class="font-light text-gray-500 sm:text-xl">
				Explore our portfolio of creative work and successful projects.
			</p>
		</div>

		<!-- Category Navigation -->
		<div class="flex flex-wrap justify-center gap-2 mb-8">
			<a
				href="<%= url_for('/portfolio/') %>"
				class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-300"
			>
				All
			</a>
			<% site.categories.filter(cat => cat.posts.some(post => post.layout ===
			'work')).each(function(category) { %>
			<a
				href="<%= url_for(category.path) %>"
				class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-300"
			>
				<%= category.name %>
			</a>
			<% }); %>
		</div>

		<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
			<% getWorkPosts().forEach(function(post) { %>
			<article class="p-4 bg-white rounded-lg border border-gray-200 shadow-md">
				<a href="<%= url_for(post.path) %>">
					<% if (post.image) { %>
					<img
						class="mb-5 rounded-lg w-full h-48 object-cover"
						src="<%= url_for(post.__permalink + post.image) %>"
						alt="<%= post.title %>"
					/>
					<% } %>
				</a>
				<% if (post.categories && post.categories.length) { %>
				<div class="flex flex-wrap gap-2 mb-2">
					<% post.categories.each(function(category) { %>
					<a
						href="<%= url_for(category.path) %>"
						class="bg-gray-100 text-gray-800 text-xs font-semibold px-2.5 py-0.5 rounded hover:bg-gray-200"
					>
						<%= category.name %>
					</a>
					<% }); %>
				</div>
				<% } %>
				<h2 class="my-2 text-2xl font-bold tracking-tight text-gray-900">
					<a href="<%= url_for(post.path) %>"><%= post.title %></a>
				</h2>
				<% if (post.subtitle) { %>
				<p class="mb-4 font-light text-gray-500"><%= post.subtitle %></p>
				<% } %>
			</article>
			<% }); %>
		</div>
	</div>
</section>
