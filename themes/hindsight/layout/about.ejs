<section class="bg-white">
	<div
		class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12"
	>
		<div class="mr-auto place-self-center lg:col-span-7">
			<h1
				class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl"
			>
				More than just
				<span
					class="font-[RetroSignature] transform -rotate-5 inline-block ml-4 text-7xl md:text-9xl font-normal text-primary-700"
				>
					creative
				</span>
			</h1>
			<p
				class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl"
			>
				<%- page.content %>
			</p>
		</div>
	</div>
</section>

<!-- Our Process  -->
<section class="bg-gray-50 py-16">
	<div class="max-w-screen-xl px-4 mx-auto">
		<div class="text-center mb-12">
			<h2 class="text-4xl font-bold text-gray-900 mb-4">Our Process</h2>
			<p class="text-xl text-gray-600 max-w-3xl mx-auto">
				We follow a proven 5-step process that ensures every project is
				delivered on time, on budget, and exceeds expectations.
			</p>
		</div>

		<ol class="relative border-s border-gray-200 max-w-4xl mx-auto">
			<% site.data.process.process.forEach(function(step, index) { %>
			<li
				class="<%= index === site.data.process.process.length - 1 ? 'ms-4' : 'mb-10 ms-4' %>"
			>
				<div
					class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
				></div>
				<h3 class="text-lg font-semibold text-gray-900">
					0<%= index + 1 %> <%= step.step %>
				</h3>
				<p
					class="<%= index === 0 ? 'mb-4' : '' %> text-base font-normal text-gray-500"
				>
					<%= step.description %>
				</p>
			</li>
			<% }); %>
		</ol>
	</div>
</section>

<!-- Team  -->
<section class="bg-white antialiased">
	<div class="max-w-screen-xl px-4 py-8 mx-auto lg:px-6 sm:py-16 lg:py-24">
		<div class="max-w-3xl mx-auto text-center">
			<h2
				class="text-3xl font-extrabold leading-tight tracking-tight text-gray-900 sm:text-4xl"
			>
				<%- site.data.team.intro.title %>
			</h2>
			<p class="mt-4 text-base font-normal text-gray-500 sm:text-xl">
				<%- site.data.team.intro.description %>
			</p>
		</div>

		<div
			class="grid grid-cols-1 gap-4 mt-8 lg:mt-16 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4"
		>
			<% site.data.team.team.forEach(function(member) { %>
			<div class="relative overflow-hidden group aspect-[3/4]">
				<!-- B&W Image (default) -->
				<img
					class="object-cover w-full h-full transition-all duration-500 ease-in-out group-hover:opacity-0 group-hover:scale-110"
					src="/img/team/<%= member['image-bw'] %>"
					alt="<%= member.name %>"
				/>
				<!-- Color Image (shown on hover) -->
				<img
					class="absolute inset-0 object-cover w-full h-full opacity-0 scale-110 transition-all duration-500 ease-in-out group-hover:opacity-100 group-hover:scale-100"
					src="/img/team/<%= member.image %>"
					alt="<%= member.name %>"
				/>
				<div
					class="absolute inset-0 grid items-end justify-center p-4 bg-gradient-to-b from-transparent to-black/60 transition-all duration-500 ease-in-out group-hover:bg-gradient-to-b group-hover:from-transparent group-hover:to-black/80"
				>
					<div
						class="text-center transform transition-all duration-500 ease-in-out group-hover:scale-105 group-hover:-translate-y-2"
					>
						<p
							class="text-lg sm:text-xl font-bold text-white transition-all duration-500 ease-in-out group-hover:text-xl sm:group-hover:text-2xl group-hover:font-extrabold"
						>
							<%= member.name %>
						</p>
						<p
							class="text-sm sm:text-base font-medium text-gray-300 transition-all duration-500 ease-in-out group-hover:text-base sm:group-hover:text-lg group-hover:text-white group-hover:font-semibold mt-1"
						>
							<%= member.position %>
						</p>
					</div>
				</div>
			</div>
			<% }); %>
		</div>

		<div class="max-w-3xl p-4 mx-auto mt-8 rounded-md lg:mt-16 bg-gray-50">
			<div
				class="flex flex-col justify-between gap-3 md:gap-6 md:items-center md:flex-row"
			>
				<div class="flex items-center gap-1.5">
					<svg
						aria-hidden="true"
						class="hidden w-5 h-5 text-gray-800 md:block shrink-0"
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 20 20"
						fill="currentColor"
					>
						<path
							d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"
						/>
					</svg>
					<span class="text-base font-normal text-gray-700">
						<span class="font-semibold">
							Want to join the Hindsight team?
						</span>
						We are growing.
					</span>
				</div>

				<a
					href="/contact"
					title=""
					class="inline-flex items-center text-base font-medium text-primary-600 hover:underline"
				>
					Join our team
					<svg
						aria-hidden="true"
						class="w-5 h-5 ml-1.5"
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 20 20"
						fill="currentColor"
					>
						<path
							fill-rule="evenodd"
							d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
							clip-rule="evenodd"
						/>
					</svg>
				</a>
			</div>
		</div>
	</div>
</section>
